<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Application8.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Application8_Tabs"
    Shell.FlyoutBehavior="Disabled"
    Title="Application8">


    <TabBar>
        <Tab Title="Home" Icon="home.png" >

            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"  />

        </Tab>

        <Tab Title="Settings" Icon="settings.png" >

            <ShellContent  ContentTemplate="{DataTemplate local:Page2}" Route="Page2"/>

        </Tab>

        <Tab Title="Shop" Icon="grade.png" >

            <ShellContent ContentTemplate="{DataTemplate local:Page3}" Route="Page3"/>

        </Tab>

        <Tab Title="Payment" Icon="grade.png" >

            <ShellContent ContentTemplate="{DataTemplate local:Page4}" Route="Page3"/>

        </Tab>
    </TabBar>
    
</Shell>
